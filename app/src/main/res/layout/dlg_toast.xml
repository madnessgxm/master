<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dlg_shape">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/textsize30dp"
        android:layout_marginLeft="20dp"
        android:text="tips"
        android:id="@+id/txttitle"/>
<View
    android:layout_marginTop="3dp"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:id="@+id/txttitlesplit"
    app:layout_constraintTop_toBottomOf="@id/txttitle"
    android:background="@color/keyboard"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/txttitlesplit"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/exit"
        style="@style/textsize20dp"
        android:textAlignment="center"
        android:id="@+id/txt_content"/>
    <View
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/viewsplitbottom"
        app:layout_constraintTop_toBottomOf="@id/txt_content"
        android:background="@color/keyboard"/>

    <TextView
        android:id="@+id/txt_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="OK"
        android:textColor="@color/dlgbtn"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewsplitbottom" />
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/viewsplitbottom"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:layout_margin="15dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/txt_cancel"
        android:visibility="gone"
        android:textColor="@color/dlgbtn"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>