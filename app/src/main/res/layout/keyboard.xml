<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/keyboard"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/key1"
        style="@style/btn_keyborad_style"
        android:text="1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/key2"
        app:layout_constraintWidth_percent="0.33" />

    <TextView
        android:id="@+id/key2"
        style="@style/btn_keyborad_style"
        android:text="2"
        app:layout_constraintLeft_toRightOf="@+id/key1"
        app:layout_constraintRight_toLeftOf="@+id/key3"
        app:layout_constraintWidth_percent="0.33" />

    <TextView
        android:id="@+id/key3"
        style="@style/btn_keyborad_style"
        android:text="3"
        app:layout_constraintLeft_toRightOf="@+id/key2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.33" />

    <TextView
        android:id="@+id/key4"
        style="@style/btn_keyborad_style"
        android:text="4"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/key5"
        app:layout_constraintTop_toBottomOf="@+id/key1"
        app:layout_constraintWidth_percent="0.33" />

    <TextView
        android:id="@+id/key5"
        style="@style/btn_keyborad_style"
        android:text="5"
        app:layout_constraintLeft_toRightOf="@+id/key4"
        app:layout_constraintTop_toBottomOf="@+id/key2"
        app:layout_constraintWidth_percent="0.33" />
    <TextView
        android:id="@+id/key6"
        style="@style/btn_keyborad_style"
        android:text="6"
        app:layout_constraintLeft_toRightOf="@+id/key5"
        app:layout_constraintTop_toBottomOf="@id/key3"
        app:layout_constraintWidth_percent="0.33" />

    <TextView
        android:id="@+id/key7"
        style="@style/btn_keyborad_style"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:text="7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/key5"
        app:layout_constraintTop_toBottomOf="@+id/key4"
        app:layout_constraintWidth_percent="0.33" />
    <TextView
        android:id="@+id/key8"
        style="@style/btn_keyborad_style"
        android:text="8"
        app:layout_constraintLeft_toRightOf="@+id/key7"
        app:layout_constraintTop_toBottomOf="@+id/key5"
        app:layout_constraintWidth_percent="0.33" />
    <TextView
        android:id="@+id/key9"
        style="@style/btn_keyborad_style"
        android:text="9"
        app:layout_constraintLeft_toRightOf="@+id/key8"
        app:layout_constraintTop_toBottomOf="@id/key6"
        app:layout_constraintWidth_percent="0.33" />

    <TextView
        android:id="@+id/key00"
        style="@style/btn_keyborad_style"
        android:text="00"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/key0"
        app:layout_constraintTop_toBottomOf="@+id/key7"
        app:layout_constraintWidth_percent="0.33" />
    <TextView
        android:id="@+id/key0"
        style="@style/btn_keyborad_style"
        android:text="0"
        app:layout_constraintLeft_toRightOf="@+id/key00"
        app:layout_constraintTop_toBottomOf="@+id/key8"
        app:layout_constraintWidth_percent="0.33" />
    <ImageView
        android:id="@+id/keyadd"
        style="@style/btn_keyborad_style"
        android:src="@drawable/inputback"
        android:scaleType="center"
        app:layout_constraintLeft_toRightOf="@+id/key0"
        app:layout_constraintTop_toBottomOf="@id/key9"
        app:layout_constraintWidth_percent="0.33" />
</android.support.constraint.ConstraintLayout>
